@model IEnumerable<MyShop.Models.Item>
<!DOCTYPE html>
<html>
<head>
    <meta name="vioport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title> My Shop </title>
</head>
<body>
    <div class="container">
        <h1>@ViewBag.CurrentViewName</h1>
        <table class='table table-striped'>
            <tr><th>Id</th><th>Name</th><th></th><th>Price</th><th>Description</th></tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemId</td>
                    <td>@item.Name</td>
                    <td><img src="@item.ImageUrl" alt="Produktbilde"></td>
                    <td>@item.Price.ToString("0.00 kr")</td>
                    <td>@item.Description</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>