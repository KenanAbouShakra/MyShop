@model Item
<h1>Delete Item</h1>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="rom">
        <dt class="col-sm-2">Item Id</dt>
        <dd class="col-sm-10">@Model.ItemId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">ImageUrl</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>
    </dl>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ItemId" method="post">
        <button type="submit" class=" btn btn-danger">Delete</button>
        <a asp-action="Table" type="submit" class="btn btn-outline-info">Cancel</a>
    </form>
</div>

